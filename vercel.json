{
  "version": 2,
  "builds": [
    {
      "src": "public/index.php",
      "use": "@vercel/php"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/public/index.php"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/public/index.php"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/index.php",
      "permanent": false
    }
  ],
  "env": {
    "APP_ENV": "prod",
    "APP_DEBUG": "0",
    "APP_SECRET": "your_app_secret_here",
    "DATABASE_URL": "your_database_url_here"
  }
}
